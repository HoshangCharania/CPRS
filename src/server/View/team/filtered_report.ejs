<% var header = '../header'; %>
<%- include(header) %>

<% JSON.stringify(records) %>
<div class="container-fluid">
<table id="dtBasicExample" class="table table-striped table-bordered mt-5" cellspacing="20" style="width:100%">
    
    <thead>
    <tr>
            <thead>
                    <tr>
                      <th class="th-sm">Team Name
                        <i class="fa fa-sort float-right" aria-hidden="true"></i>
                      </th>
                      <th class="th-sm">Team Category
                        <i class="fa fa-sort float-right" aria-hidden="true"></i>
                      </th>
                      <th class="th-sm">Portfolio Stage
                        <i class="fa fa-sort float-right" aria-hidden="true"></i>
                      </th>
                      <th class="th-sm">Funding
                        <i class="fa fa-sort float-right" aria-hidden="true"></i>
                      </th>
                      <th class="th-sm">Actions
                        <i class="fa fa-sort float-right" aria-hidden="true"></i>
                      </th>
                    </tr>
                  </thead>
    </tr>
    </thead>
    <tbody>
<% for (arr_key in records) { %>
        <tr>
            <td><%= records[arr_key]["record"]["Name_Text"] %></td>
            <td><%= records[arr_key]["record"]["Team_Category_Name"] %></td>
            <td><%= records[arr_key]["record"]["Portfolio_Stage_Select"] %></td>
            <td><%= records[arr_key]["record"]["Funding_Name"] %></td>
            <td>
                <div class="row mt-2">
                    <div class="col">
                <a class="btn btn-primary" href='/team/edit/<%= records[arr_key]["id"] %>' role="button">View</a>
                        </div>
                </div>
                <div class="row mt-2">
                    <div class="col">
                <a class="btn btn-primary" href='/team/edit/<%= records[arr_key]["id"] %>' role="button">Edit</a>
                </div>
                </div>
            </td>
        </tr>
<% } %>

    </tbody>
</table>
</div>

<script>
$(document).ready(function() {
    $('#dtBasicExample').DataTable();
  $('.dataTables_length').addClass('bs-select');
} );
</script>
<% var footer = '../footer'; %>
<%- include(footer) %>