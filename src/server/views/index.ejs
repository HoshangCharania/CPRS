    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.6/js/standalone/selectize.js"></script>
    <head>
        <meta charset="utf-8">
        <title>CPRS</title>
    </head>
    <%= id %>
    <br>
    <%- JSON.stringify(record) %>
    <form>
            <div class="form-group">
                    <h3>Team Name:</h3>
                    <input class="form-control" type="text" value='<%= record["Name_Text"] %>' id="name">
                  </div>
    </div>
    </form>
    <h3>Teams</h3>
    <select multiple id="team" style="width:600px;height:300px ;">

            <% for (var key in teams) { %>
                <option value="<%= teams[key]['id'] %>"><%= teams[key]['name'] %></option>
            <% } %>
              </select>

    <br>
    <h3>Members</h3>
    <select multiple id="member" style="width:600px;height:300px ;" >

        <% for (var key in members) { %>
            <% for (var recordKey in record['Member_Link']){ %>
                <% if(record['Member_Link'][recordKey] ==  members[key]['id']){ %>
                    <option value="<%= members[key]['id'] %>" selected="selected"><%= members[key]['name'] %></option>
                    <% break %>
                    <br>
                <% } else if((recordKey)==(record['Member_Link'].length-1)){%>
                    
                    <option value="<%= members[key]['id'] %>"><%= members[key]['name'] %></option>
                <% } %>
            <% } %>
        <% } %>
              </select>
    <br>
